<h1>Add a new book to your shelf</h1>
<%= form_for @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :author %>
    <%= f.text_field :author %><br>
    <%= f.label :pub_year %>
    <%= f.number_field :pub_year %><br>
    <%= f.label :note %> 
    <%= f.text_field :note %><br>
    <%= f.label :favorite %>
    <%= f.check_box :favorite %><br></br>
    <%= f.submit 'Add book'%>
<% end %>