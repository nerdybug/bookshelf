<h1>Edit Info for <i><%= @user.name %></i></h1>
<br>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      The following <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
    </h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @user do |f| %>
    <% @form = f %>
    <%= render 'user' %>
<% end %>
<p>NOTE: if you want to keep your password but change your name, re-enter your password</p>
<br><br>
<%= link_to 'Delete Account', user_path(@user), :method => :delete %>

<br><br>
<%= link_to 'Back to Account Info', user_path(@user) %>
<br><br>
<%= link_to 'Your Bookshelf', user_books_path(@user) %>
<br><br>
<%= link_to 'Logout', logout_path %>