<h1>Edit Info for <%= @user.name %></h1>
<br>
<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br></br>
    <%= f.submit 'Save'%>
<% end %>
<br><br>
<%= link_to 'Delete Account', user_path(@user), data: {:confirm => 'Are you sure?'}, :method => :delete %>

<br><br>
<%= link_to 'Back to Account Info', user_path(@user) %>
<br></br>
<%= link_to 'Your Bookshelf', user_books_path(@user) %>
<br><br>
<%= link_to 'Logout', logout_path %>