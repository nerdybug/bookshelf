<h1>Singup for your Bookshelf</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      The following <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
    </h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
    <% @form = f %>
    <%= render 'user' %>
<% end %>
<br>
<%= link_to 'Back', root_path %>